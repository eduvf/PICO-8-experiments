function _init()
  t = 0
  
  board = {}
  cards = {
    "\f9üê±", "\fc‚ô™", "\fa‚òÖ", "\fb‚óè",
    "\ff‚åÇ", "\fe‚ßó", "\f6‚óÜ", "\f8‚ô•"
  }

  generate_board()
end

function generate_board()
  for i = 1, 16 do
    local c = ceil(i/16*8)
    while true do
      local r = flr(rnd(16)) + 1
      if board[r] == nil then
        board[r] = cards[c]
        break
      end
    end
  end
end

function print_board()
  local offset = 8
  local spacing = 12
  for i = 1, 16 do
    local x = (i-1) % 4 * spacing + offset
    local y = flr((i-1) / 4) * spacing + offset
    print(board[i], x, y)
  end
end

function _update()
  t += 1
end

function _draw()
  cls()
  print_board()
end
