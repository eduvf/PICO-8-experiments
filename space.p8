pico-8 cartridge // http://www.pico-8.com
version 36
__lua__
ang_vel = 0.01
lin_vel = 1
anim = {
  {1, false, false},
  {2, false, false},
  {3, false, false},
  {2, false, true},
  {1, false, true},
  {2, true, true},
  {3, true, false},
  {2, true, false}
}

function _init()
  p = {
    x = 64,
    y = 64,
    ang = 0.25,
    vel = 0,
    anim = {1, false, false},
  }
end

function _update()
  p.vel = 0

  if btn(0) then p.ang += ang_vel end
  if btn(1) then p.ang -= ang_vel end
  if btn(4) then p.vel += lin_vel end

  p.ang %= 1

  p.x += cos(p.ang) * p.vel
  p.y += sin(p.ang) * p.vel
end

function _draw()
  cls()
  spr(1, p.x, p.y, 1, 1, false, false)
end

